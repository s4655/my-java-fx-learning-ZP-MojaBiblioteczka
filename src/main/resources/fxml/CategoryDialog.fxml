<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.moja.biblioteczka.controllers.CategoryDialogController">
   <children>
      <HBox alignment="BASELINE_CENTER" centerShape="false" spacing="20.0">
         <children>
            <Label text="%CategoryDialog.addCategoryTextFieldLabel" />
            <TextField fx:id="addCategoryTextField" />
            <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#addCategoryButtonOnAction" text="%CategoryDialog.addCategoryButton" />
            <Label text="%CategoryDialog.chooseCategoryComboBoxLabel" />
            <ComboBox fx:id="chooseCategoryComboBox" prefWidth="150.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
